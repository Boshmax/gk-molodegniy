set quoted_identifier on;

if not exists (
	select 1 from information_schema.views
		where table_schema = N'$(_SCHEMA)' and table_name = N'$(_OBJECT)'
)
exec sp_executesql N'
create view $(_SCHEMA).$(_OBJECT)
as
select 0 as [error];
';
